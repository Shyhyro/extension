{
    "name": "Realtools",
    "description": "The mini version of Realtools.",
    "version": "2.3.0",
    "manifest_version": 3,
    "permissions": ["storage"],
    "action": {
        "default_popup": "popout.html",
        "default_icon": {
            "16": "/images/16.png",
            "32": "/images/32.png",
            "48": "/images/48.png",
            "128": "/images/128.png"
        }
    },
    "icons": {
        "16": "/images/16.png",
        "32": "/images/32.png",
        "48": "/images/48.png",
        "128": "/images/128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.horsereality.com/horses/*"],
            "js": [
                "browser-polyfill.js",
                "site-hr/insert-css.js",
                "site-hr/calc.js",
                "site-hr/merge.js",
                "site-hr/id-display.js"
            ]
        }
    ],
    "host_permissions": ["*://*.horsereality.com/horses/*"]
}
